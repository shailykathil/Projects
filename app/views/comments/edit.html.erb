<h1>Edit comment</h1>
<%= form_for([@project, @comment], :method=>"patch") do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
   <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit  :class=>"btn btn-default"%>
  </p>
<% end %>
 
<%= link_to 'Back', projects_path , :class=>"btn btn-default"%>